<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="17"
        android:id="@+id/day_of_month_TV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="27dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fr"
        android:id="@+id/day_of_week_TV"
        android:layout_below="@+id/day_of_month_TV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="January"
        android:id="@+id/month_name_TV"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/day_of_month_TV"
        android:layout_toEndOf="@+id/day_of_month_TV"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="28*C"
        android:id="@+id/temperature_TV"
        android:layout_below="@+id/month_name_TV"
        android:layout_toRightOf="@+id/day_of_month_TV"
        android:layout_alignRight="@+id/month_name_TV"
        android:layout_alignEnd="@+id/month_name_TV"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/month_name_TV"
        android:layout_alignBottom="@+id/day_of_week_TV"
        android:src="@drawable/temp_weather_ic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="легка злива"
        android:id="@+id/description_TV"
        android:layout_below="@+id/temperature_TV"
        android:layout_toRightOf="@+id/day_of_week_TV"
        android:layout_alignBottom="@+id/day_of_week_TV"
        android:layout_alignRight="@+id/temperature_TV"
        android:layout_alignEnd="@+id/temperature_TV"
        android:textSize="15dp" />
</RelativeLayout>